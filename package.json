{
  "name": "laisiangtho",
  "version": "1.1.9",
  "description": "the Holy Bible in languages!",
  "config": {
    "common": {
      "name": "Lai Siangtho",
      "unique": ".n-.o-.v-build-.b",
      "development": {
        "root": "development",
        "assets": "assets"
      },
      "production": {
        "root": "production",
        "main": "index",
        "type": "app",
        "file": {
          "img": {
            "png$": true
          },
          "fontmya": {
            "(.*)": true
          },
          "fontello": {
            "json$": false
          },
          "laisiangtho": {
            "^[a-z\\d]+.json$": true
          },
          "lang": {
            "^[a-z]{2}.json$": true
          },
          "css": {
            "([A-Z]|\\d)": false
          },
          "js": {
            "([A-Z]|\\d)": false
          },
          "root": {
            "([A-Z]|\\d)": false
          }
        }
      },
      "version": "1.1.9",
      "build": "1.1.9"
    },
    "individual": {
      "chrome": {
        "production": {
          "file": {
            "css": {
              "(mobile|web|tablet)": false
            },
            "js": {
              "(mobile|web|tablet)": false
            },
            "root": {
              "(chrome|app)": true,
              "(web)": false
            }
          }
        }
      },
      "ios": {
        "production": {
          "file": {
            "css": {
              "(desktop|web|android)": false
            },
            "js": {
              "(desktop|web|chrome|android)": false
            },
            "root": {
              "(ios|app)": true,
              "(web)": false
            }
          }
        }
      },
      "android": {
        "production": {
          "file": {
            "css": {
              "(desktop|web|ios)": false
            },
            "js": {
              "(desktop|web|chrome|ios)": false
            },
            "root": {
              "(android|app)": true,
              "(web)": false
            }
          }
        }
      },
      "default": {
        "development": {
          "main": "default"
        },
        "production": {
          "type": "web",
          "file": {
            "css": {
              "(app)": false
            },
            "js": {
              "(app)": false
            },
            "root": {
              "(default|web)": true,
              "(app)": false
            }
          }
        }
      },
      "electron": {}
    }
  },
  "main": "npm-index.js",
  "scripts": {
    "build": "node ./npm-build.js",
    "build-chrome": "node ./npm-build.js --os=chrome",
    "build-ios": "node ./npm-build.js --os=ios",
    "build-android": "node ./npm-build.js --os=android",
    "build-default": "node ./npm-build.js --os=default",
    "build-electron": "node ./npm-build.js --os=electron",
    "build-template": "node ./npm-template.js --os=null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khensolomonlethil/laisiangtho.git"
  },
  "keywords": [
    "Holy",
    "Bible",
    "Lai",
    "Siangtho",
    "Zomi"
  ],
  "author": "Khen Solomon Lethil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khensolomonlethil/laisiangtho/issues"
  },
  "homepage": "https://github.com/khensolomonlethil/laisiangtho#readme",
  "devDependencies": {
    "cli-color": "^1.1.0",
    "fs-extra": "^0.26.2",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-include": "^2.1.0",
    "gulp-minify-css": "^1.2.1",
    "gulp-sass": "^2.0.4",
    "gulp-uglify": "^1.4.1",
    "minimist": "^1.2.0",
    "node.extend": "^1.1.5",
    "xmldom": "^0.1.19"
  }
}
